{
  "name": "rat-race",
  "version": "1.0.0",
  "description": "After Dark Rat Race - A recreation of the classic screensaver",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run lint && npm run typecheck && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "midi-player-js": "^2.0.16",
    "soundfont-player": "^0.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.12"
  },
  "keywords": ["screensaver", "after-dark", "rat-race", "canvas", "game"],
  "license": "MIT"
}
